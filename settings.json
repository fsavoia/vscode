{
    "workbench.startupEditor": "none",
    "json.schemas": [],
    "yaml.customTags": [
        "!And",
        "!And sequence",
        "!If",
        "!If sequence",
        "!Not",
        "!Not sequence",
        "!Equals",
        "!Equals sequence",
        "!Or",
        "!Or sequence",
        "!FindInMap",
        "!FindInMap sequence",
        "!Base64",
        "!Join",
        "!Join sequence",
        "!Cidr",
        "!Ref",
        "!Sub",
        "!Sub sequence",
        "!GetAtt",
        "!GetAZs",
        "!ImportValue",
        "!ImportValue sequence",
        "!Select",
        "!Select sequence",
        "!Split",
        "!Split sequence"
    ],
    "editor.formatOnSave": true,
    "code-runner.clearPreviousOutput": true,
    "code-runner.ignoreSelection": true,
    "code-runner.saveFileBeforeRun": true,
    "code-runner.runInTerminal": true,
    "code-runner.preserveFocus": false,
    "code-runner.executorMap": {
        "python": "clear && ./venv/bin/python",
        "sqlite": "sqlite3 /opt/data/database.db <"
    },
    "yaml.validate": false,
    "security.workspace.trust.untrustedFiles": "open",
    "redhat.telemetry.enabled": true,
    "explorer.confirmDragAndDrop": false,
    "editor.wordWrap": "on",
    "editor.suggest.showMethods": true,
    "editor.suggest.preview": true,
    "editor.acceptSuggestionOnEnter": "on",
    "editor.snippetSuggestions": "top",
    "python.analysis.typeCheckingMode": "basic",
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
        // "editor.codeActionsOnSave": {
        //     "source.organizeImports": "explicit"
        // }
    },
    "isort.args": [
        "--profile",
        "black",
    ],
    "python.languageServer": "Pylance",
    "black-formatter.args": [
        "--line-length",
        "79"
    ],
    "python.testing.unittestEnabled": false,
    "files.associations": {
        "*.html": "html",
        "**/templates/*.html": "django-html",
        "**/templates/*": "django-txt",
        "**/requirements{/**,*}.{txt,in}": "pip-requirements"
    },
    "workbench.iconTheme": "material-icon-theme",
    "[dockerfile]": {
        "editor.defaultFormatter": "ms-azuretools.vscode-docker"
    },
    "terminal.integrated.enableMultiLinePasteWarning": false,
    "snyk.yesWelcomeNotification": false,
    "snyk.trustedFolders": [
        "/home/fsavoia/eyeinspect-ccrit-extension",
        "/Users/fsavoia/Dev/posts-api"
    ],
    "snyk.advanced.cliPath": "/Users/fsavoia/Library/Application Support/snyk-ls/snyk-macos",
    "python.defaultInterpreterPath": "python3",
    // "editor.lineNumbers": "relative",
    "github.copilot.enable": {
        "*": true,
        "plaintext": false,
        "markdown": true,
        "scminput": false,
        "python": false
    },
    "cSpell.userWords": [
        "apscheduler",
        "colorlog",
        "cprint",
        "DESCRITPTION",
        "dotenv",
        "dundie",
        "dynaconf",
        "fastapi",
        "forcelist",
        "Geldropseweg",
        "hrules",
        "levelname",
        "metavars",
        "prettytable",
        "pydantic",
        "rstuf",
        "Savoia",
        "sqlmodel",
        "termcolor",
        "Terrafriend",
        "typer",
        "upserv"
    ],
    "explorer.confirmDelete": false,
    "terminal.integrated.fontSize": 13.5,
    "terminal.integrated.copyOnSelection": true,
    "workbench.colorTheme": "Dracula At Night",
    "editor.minimap.enabled": false,
    "editor.fontSize": 13.5,
    "editor.fontFamily": "Cascadia Code",
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": [
                    "comment",
                    "constant",
                    "emphasis",
                    "entity",
                    "invalid",
                    "keyword",
                    "markup",
                    "meta",
                    "storage",
                    // "string",
                    "strong",
                    "support",
                    "variable"
                ],
                "settings": {
                    "fontStyle": "italic"
                }
            }
        ]
    },
    "editor.fontLigatures": true,
    "terminal.integrated.fontFamily": "MesloLGMDZ Nerd Font",
    "git.confirmSync": false
}
